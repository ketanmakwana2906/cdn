select t.code as train_code,t.name as train_name,t.doo, tsc.day, tsc.arrive_time, tsc.depart_time, CAST(TIME_FORMAT(tsc.halt, '%H:%i') as CHAR), tsc.platform from train t, train_station ts, train_schedule tsc, city where t.id=tsc.train_id and ts.id=tsc.train_station_id and city.id=ts.city_id and ts.code='CSTM' and tsc.stops=1 and t.is_active = 1 order by arrive_time;
