import hashlib
import requests

def generate_vpa_hash(key, command, var1, salt):
    input_string = f"{key}|{command}|{var1}|{salt}"
    hash_object = hashlib.sha512(input_string.encode())
    return hash_object.hexdigest()

# Replace these placeholder values with your actual values
key = "yourActualKey"
salt = "your32CharacterSalt"
command = "validateVPA"
var1 = "testvpa@upi"  # Replace with the actual VPA you want to validate

# Generate the hash
vpa_hash = generate_vpa_hash(key, command, var1, salt)

# API endpoint for VPA validation
url = "https://info.payu.in/merchant/postservice.php?form=2"

# Data payload for the API request
data = {
    "key": key,
    "command": command,
    "var1": var1,
    "hash": vpa_hash
}

# Make the API request
response = requests.post(url, data=data)

# Print the response
print("Response Status Code:", response.status_code)
print("Response JSON:", response.json())
