import hashlib
import uuid

def generate_transaction_id():
    return str(uuid.uuid4())

def generate_vpa_hash(key, txnid, amount, productinfo, firstname, email, salt):
    input_string = f"{key}|{txnid}|{amount}|{productinfo}|{firstname}|{email}|||||||||||{salt}"
    hash_object = hashlib.sha512(input_string.encode())
    return hash_object.hexdigest()

# Replace these placeholder values with your actual values
key = "yourActualKey"
salt = "yourActualSalt"
txnid = generate_transaction_id()
amount = "10.00"
productinfo = "Test Product"
firstname = "John"
email = "john@example.com"

vpa_hash = generate_vpa_hash(key, txnid, amount, productinfo, firstname, email, salt)
print(f"Generated Transaction ID: {txnid}")
print(f"Generated VPA Hash: {vpa_hash}")
