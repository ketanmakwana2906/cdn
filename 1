# Default policy: Allow content only from the same origin
CSP_DEFAULT_SRC = ("'self'",)

# Script policy: Only allow trusted domains for scripts
CSP_SCRIPT_SRC = ("'self'", "https://trusted-cdn.com")  # No 'unsafe-inline' or 'unsafe-eval'

# Style policy: Only allow trusted domains for CSS
CSP_STYLE_SRC = ("'self'", "https://trusted-cdn.com")

# Image policy: Restrict images to specific sources
CSP_IMG_SRC = ("'self'", "https://images.example.com")

# Font policy: Restrict fonts to trusted providers
CSP_FONT_SRC = ("'self'", "https://fonts.googleapis.com")

# Prevent unauthorized AJAX requests and WebSockets
CSP_CONNECT_SRC = ("'self'", "https://api.example.com")

# Prevent embedding using <iframe> (clickjacking protection)
CSP_FRAME_ANCESTORS = ("'none'",)  

# Prevent plugin execution (e.g., Flash)
CSP_OBJECT_SRC = ("'none'",)  

# Prevent form submission to unauthorized URLs
CSP_FORM_ACTION = ("'self'",)

# Enable CSP violation reporting
CSP_REPORT_TO = "/csp-violation-report/"
