#!/bin/sh
echo "Starting Celery worker..."
celery -A Trainman worker -c 3 -Q high_priority -n high@%h -l debug & #start high priority workers
celery -A Trainman worker -c 1 -Q low_priority -n low@%h -l debug & #start low priority workers
wait # Wait for background jobs to keep the container alive if The second worker (low_priority) might exit or crash
