# Download Firefox tarball
curl -L https://download.mozilla.org/?product=firefox-esr-latest&os=linux64&lang=en-US -o firefox.tar.bz2

# Extract the tarball
tar -xvjf firefox.tar.bz2

# Move Firefox to an appropriate location
mv firefox /opt/firefox

# Clean up
rm firefox.tar.bz2

# Download Geckodriver tarball
curl -L https://github.com/mozilla/geckodriver/releases/download/v0.33.0/geckodriver-v0.33.0-linux64.tar.gz -o geckodriver.tar.gz

# Extract the tarball
tar -xvzf geckodriver.tar.gz

# Move geckodriver to a directory in your PATH (e.g., /usr/local/bin)
mv geckodriver /usr/local/bin/

# Clean up
rm geckodriver.tar.gz

